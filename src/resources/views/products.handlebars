<!-- Products Page-->

<div class="mt-4">
    <div id="contact" class="promotion-header background-animation row">
        <div class="col-12">
            <span class="audiowide-regular slogun-extra2">Quầy Thực Phẩm Thú Cưng Chó & Mèo</span> 
        </div>
    </div>
    <div class="row">
        {{#each products}}
        <div class="custom-col-5ths custom-col-4ths custom-col-6ths">
            <div class="card card-frame">
                <a href="/products/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body card-body-frame">
                    <a href="/products/{{this.slug}}">
                        <span class="card-title card-name text-center">{{this.name}}</span>
                    </a>
                    <div class="price-space">
                        <div class="card-text card-price">{{this.price}}</div>
                        <div class="card-text card-origin">{{this.origin}}</div>
                    </div>
                    
                    <p class="card-text card-description">{{this.description}}</p>
                <div class="btn btn-info card-button">Có bán tại shop</div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
