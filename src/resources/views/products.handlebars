<!-- Products Page-->

<div class="mt-4">
    <h1 class="promotion-header background-animation roboto text-center">Quầy Thực Phẩm Thú Cưng</h1>
    <meta name="description" content="Các loại thực phẩm chất lượng cao cho thú cưng tại Sunny Pet Spa Bà Rịa. Đảm bảo dinh dưỡng và sức khỏe tốt nhất cho chó mèo của bạn.">
    <div class="row">
        {{#each products}}
        <div class="custom-col-5ths custom-col-4ths custom-col-6ths card-frame" itemscope itemtype="http://schema.org/Product">
            <div class="card card-frame">
                <a href="/products/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" itemprop="image" loading="lazy">
                </a>
                <div class="card-body card-body-frame">
                    <a href="/products/{{this.slug}}">
                        <h5 class="card-title card-name" itemprop="name">{{this.name}}</h5>
                    </a>
                    <div class="price-space">
                        <div class="card-text card-price" itemprop="price">{{this.price}}</div>
                        <div class="card-text card-origin" itemprop="brand">{{this.origin}}</div>
                    </div>
                    
                    <p class="card-text card-description" itemprop="description">{{this.description}}</p>
                <a href="/products/{{this.slug}}" class="btn btn-primary card-button">Xem chi tiết</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>