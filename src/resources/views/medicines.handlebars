<!-- medicines Page-->

<div class="mt-4">
    <h1 class="promotion-header background-animation roboto text-center">Quầy Chuồng & Vật Dụng Thú Cưng</h1>
    <meta name="description" content="Quầy chuồng và vật dụng cho thú cưng tại Sunny Pet Spa Bà Rịa. Đa dạng sản phẩm chất lượng, giá tốt.">
    <div class="row">
        {{#each medicines}}
        <div class="custom-col-5ths custom-col-4ths custom-col-6ths card-frame" itemscope itemtype="http://schema.org/Product">
            <div class="card card-frame">
                <a href="/medicines/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" itemprop="image" loading="lazy">
                </a>
                <div class="card-body card-body-frame">
                    <a href="/medicines/{{this.slug}}">
                        <h5 class="card-title card-name" itemprop="name">{{this.name}}</h5>
                    </a>
                    <div class="price-space">
                        <div class="card-text card-price" itemprop="price">{{this.price}}</div>
                        <div class="card-text card-origin">{{this.origin}}</div>
                    </div>
                    
                    <p class="card-text card-description" itemprop="description">{{this.description}}</p>
                <a href="/medicines/{{this.slug}}" class="btn btn-primary card-button">Xem chi tiết</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>