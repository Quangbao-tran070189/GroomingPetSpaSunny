  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Lightbox CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    /* Sunny Header */
    .sunny-header {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .sunny-header h4 {
      color: #333;
    }

    .sunny-header h5.subheader {
      color: #666;
      margin-top: 10px;
    }

    /* Image Hover Effect */
    .custom-image-row img {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-radius: 10px;
      margin: 5px;
      width: 100%;
      max-width: 200px;
      height: auto;
    }

    .custom-image-row img:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Fade-in Animation */
    .custom-image-row img {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .custom-image-row img.fade-in {
      opacity: 1;
      transform: translateY(0);
    }

    /* Responsive Grid */
    .custom-image-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .custom-image-row a {
      flex: 1 1 200px; /* Flexbox để ảnh tự động co giãn */
      margin: 5px;
    }

    @media (max-width: 768px) {
      .custom-image-row a {
        flex: 1 1 150px; /* Điều chỉnh kích thước ảnh trên mobile */
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="mt-4 sunny-header">
    <h4 class="text-center slogun-extra2">CÙNG SUNNY PET SPA KHÁM PHÁ NHỮNG KHOẢNH KHẮC ĐÁNG YÊU!</h4>
