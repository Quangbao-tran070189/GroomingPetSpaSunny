<header class="newis-header">
    <h2 class="slogun-extra2">Bảng Tin Chăm Sóc Thú Cưng Chó & Mèo</h2>
</header>
<div class="container">
    <div class="row">
        {{#each newis}}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="newis-news-item">
                <div class="newis-news-img">
                    <a href="/newis/{{this.slug}}">
                        <img src="{{this.image}}" alt="{{this.name}}">
                    </a>
                    <div class="newis-news-name">
                        <a href="/newis/{{this.slug}}">
                            <h2>{{this.name}}</h2>
                        </a>
                    </div>
                </div>
                <div class="newis-news-description">
                    <textarea readonly>{{this.description}}</textarea>
                </div>
                <a href="/newis/{{this.slug}}">
                    <div class="newis-read-more" onclick="toggleDescription(this)">Xem thêm</div>
                </a>
                <div class="newis-news-origin">
                    <strong>By:</strong> {{this.origin}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {{#if (gt currentPage 1)}}
            <li class="page-item">
                <a class="page-link" href="?page={{subtract currentPage 1}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{/if}}
            {{#each (range 1 totalPages) as |page|}}
            <li class="page-item {{#if (eq page currentPage)}}active{{/if}}">
                <a class="page-link" href="?page={{page}}">{{page}}</a>
            </li>
            {{/each}}
            {{#if (lt currentPage totalPages)}}
            <li class="page-item">
                <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
<script>
    function toggleDescription(element) {
        const newsItem = element.closest('.newis-news-item');
        newsItem.classList.toggle('newis-expanded');
    }
</script>