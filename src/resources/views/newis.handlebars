<header class="newis-header">
    <h2 class="slogun-extra2">Bảng Tin Chăm Sóc Thú Cưng Chó & Mèo</h2>
    <meta name="description" content="Cập nhật tin tức mới nhất về chăm sóc thú cưng chó mèo tại Sunny Pet Spa Bà Rịa.">
</header>
<div class="container">
    <div class="row">
        {{#each newis}}
        <div class="col-lg-3 col-md-6 mb-4" itemscope itemtype="http://schema.org/NewsArticle">
            <div class="newis-news-item">
                <div class="newis-news-img">
                    <a href="/newis/{{this.slug}}" itemprop="url">
                        <img src="{{this.image}}" alt="{{this.name}}" itemprop="image">
                    </a>
                    <div class="newis-news-name">
                        <a href="/newis/{{this.slug}}" itemprop="url">
                            <h2 itemprop="headline">{{this.name}}</h2>
                        </a>
                    </div>
                </div>
                <div class="newis-news-description">
                    <div class="newis-news-description-content" itemprop="description">{{this.description}}</div>
                </div>
                <a href="/newis/{{this.slug}}" itemprop="url">
                    <div class="newis-read-more" onclick="toggleDescription(this)">Xem thêm</div>
                </a>
                <div class="newis-news-origin">
                    <strong>By:</strong> <span itemprop="author">{{this.origin}}</span>
                </div>
                <meta itemprop="datePublished" content="{{this.createdAt}}">
            </div>
        </div>
        {{/each}}
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {{#if (gt currentPage 1)}}
            <li class="page-item">
                <a class="page-link" href="?page={{subtract currentPage 1}}" aria-label="Previous" rel="prev">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{/if}}
            {{#each (range 1 totalPages) as |page|}}
            <li class="page-item {{#if (eq page currentPage)}}active{{/if}}">
                <a class="page-link" href="?page={{page}}">{{page}}</a>
            </li>
            {{/each}}
            {{#if (lt currentPage totalPages)}}
            <li class="page-item">
                <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next" rel="next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
<script>
    function toggleDescription(element) {
        const newsItem = element.closest('.newis-news-item');
        newsItem.classList.toggle('newis-expanded');
    }
</script>